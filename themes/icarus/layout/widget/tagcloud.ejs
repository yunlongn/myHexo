<% if (site.tags.length){ %>
    <div class="card widget">
        <div class="card-content">
        <h3 class="menu-label"><%= __('tagcloud') %></h3>

            <%- tagcloud(site.tags, {
                min_font: 13,
                max_font: 23,
                amount: 65,
                orderby: 'count',
                color: true,
                start_color: '#9900FF',
                end_color: '#FF0000'
            }) %>
        </div>
    </div>
<% } %>
